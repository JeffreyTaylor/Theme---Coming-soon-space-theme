{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "brightside-webapp-loadbalancer"
  },
  "spec": {
    "ports": [
      {
        "name": "http",
        "port": 80,
        "targetPort": 8000
      }
    ],
    "selector": {
      "app": "brightside-webapp"
    },
    "type": "LoadBalancer"
  }
}